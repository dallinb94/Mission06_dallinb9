@{
    ViewData["Title"] = "Update Movie";
}

@model NewMovieModel

<h1>Update Movie</h1>
<div>
    <form method="post">

        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="MovieID" />

        <div>
            <label asp-for="CategoryID">Category:</label>
            <select id="Category" asp-for="CategoryID">
                <option value="">Select a Category</option>
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.CategoryID">@c.CategoryName</option>
                }
            </select>
        </div>

        <div>
            <label asp-for="Title">Title:</label>
            <input id="Title" asp-for="Title" />
        </div>

        <div>
            <label type="number" asp-for="Year">Year:</label>
            <input id="Year" asp-for="Year" />
        </div>

        <div>
            <label asp-for="Director">Director:</label>
            <input id="Director" asp-for="Director" />
        </div>

        <div>
            <label asp-for="Rating">Rating:</label>
            <select id="Rating" asp-for="Rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>

        <div>
            <label asp-for="Edited">Edited:</label>
            <select id="Edited" asp-for="Edited">
                <option value="" selected></option>
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
        </div>

        <div>
            <label asp-for="LentTo">LentTo:</label>
            <input id="LentTo" asp-for="LentTo" />
        </div>

        <div>
            <label asp-for="Notes">Notes:</label>
            <input id="Notes" asp-for="Notes" maxlength="25" />
        </div>

        <button id="addMovieButton" type="submit">Add Movie</button>
    </form>
</div>